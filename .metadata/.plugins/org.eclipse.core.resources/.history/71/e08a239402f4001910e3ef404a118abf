package fr.eni.ecoleeni.maximot;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileInputStream;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.Scanner;

public final class Launcher {

	public static void main(String[] args) {
		String rndWord;
		rndWord = tirerMotAleatoirement();

	}

	public static Character[] tirerMotAleatoirement() {
		ArrayList<String> mots = new ArrayList<String>();
		try {
			
			File addr = new File("C:\\Users\\acaignar2019\\Documents\\06-POO\\TP\\dictionnaire.txt");
			BufferedReader in = new BufferedReader(new InputStreamReader(new FileInputStream(addr), "UTF8"));
			String str;

			while ((str = in.readLine()) != null) {
				mots.add(str);
			}

			in.close();
		} catch (Exception e) {
			System.out.println("An error occurred.");
			e.printStackTrace();
		}
		
		System.out.println(mots.get(0));
		return new Character[] { 'a' };

	}

}
